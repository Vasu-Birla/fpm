<!-- Header Start -->
<%- include('clientheader.ejs'); %>
<!-- Header End -->

<style>
  :root {
    --notif-bg: #f4f7fb;
    --notif-card: #ffffff;
    --notif-line: #e7edf6;
    --notif-text: #182233;
    --notif-muted: #6b778a;
    --notif-shadow: 0 18px 50px rgba(18, 38, 78, 0.08);
    --notif-radius: 18px;
  }

  .page-notifications {
    background: var(--notif-bg);
    padding: 120px 0 80px;
  }
  .page-notifications .card {
    border-radius: var(--notif-radius);
    border: 1px solid var(--notif-line);
    box-shadow: var(--notif-shadow);
  }
  .page-notifications .h3-title {
    font-weight: 800;
    color: var(--notif-text);
  }
  .page-notifications .text-muted {
    color: var(--notif-muted) !important;
  }
  .page-notifications .form-control,
  .page-notifications .form-select {
    border-radius: 12px;
    border-color: var(--notif-line);
  }
  .page-notifications .table {
    margin-bottom: 0;
  }
  .page-notifications .table thead th {
    background: #f6f8fc;
  }
</style>


<section class="main-inner-banner">
  <!-- banner intentionally kept minimal for client portal -->
</section>

<!-- Breadcrumb Start -->
<div class="breadcrumb-box">
  <ul>
    <li><a href="/home" title="HOME">HOME</a></li>
    <li><a href="/notifications" title="Cases">Notifications</a></li>
  </ul>
</div>
<!-- Breadcrumb End -->

<section class="page-notifications py-5">
  <div class="container">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 pb-3 mb-3 border-bottom">
      <div>
        <h3 class="h3-title mb-0">Notifications</h3>
        <div class="text-muted">Your latest alerts and updates.</div>
      </div>
      <button class="btn btn-outline-secondary btn-sm" id="markAllReadBtn">Mark all read</button>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div class="row g-2 align-items-end">
          <div class="col-md-3">
            <label class="form-label">Status</label>
            <select class="form-select" id="notifStatus">
              <option value="">All</option>
              <option value="unread">Unread</option>
              <option value="read">Read</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">Type</label>
            <select class="form-select" id="notifType">
              <option value="">All</option>
              <option value="case_update">Case Update</option>
              <option value="task_assigned">Task Assigned</option>
              <option value="event_reminder">Event Reminder</option>
              <option value="invoice">Invoice</option>
              <option value="system">System</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Search</label>
            <input type="text" class="form-control" id="notifSearch" placeholder="Search notifications">
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table id="notificationTable" class="table table-striped table-bordered table-nowrap">
            <thead>
              <tr>
                <th>Time</th>
                <th>Title</th>
                <th>Message</th>
                <th>Type</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer Start -->
<%- include('clientfooter.ejs'); %>
<!-- Footer End -->

