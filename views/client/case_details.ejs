          <div class="card-header bg-light">
            <span class="fw-semibold"><i class="ti ti-gavel me-1"></i> Court Filings</span>
          </div>
          <div class="card-body">
            <% if (courtFilings && courtFilings.length) { %>
              <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Filing Type</th>
                      <th>Court</th>
                      <th>Filing Date</th>
                      <th>Status</th>
                      <th>Reference</th>
                      <th>Receipt</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (courtFilings || []).forEach((f, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= f.filing_type || '-' %></td>
                        <td><%= f.court_type || '-' %></td>
                        <td class="small"><%= fmtDate(f.filing_date) %></td>
                        <td><span class="badge bg-light text-dark border"><%= f.status || 'Pending' %></span></td>
