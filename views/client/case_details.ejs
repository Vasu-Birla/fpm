                    <% } %>
                    <div>
                      <div class="fw-semibold"><%= firmName %></div>
                      <div class="small text-muted"><%= firm?.parish || '-' %></div>
                    </div>
                  </div>
                  <div class="small text-muted mb-2"><%= firm?.address || 'Address not provided.' %></div>
                  <div class="small"><%= firm?.description || 'Firm description not available.' %></div>
                </div>
              </div>

