            <span class="fw-semibold"><i class="ti ti-archive me-1"></i> Evidence</span>
          </div>
          <div class="card-body">
            <% if (evidences && evidences.length) { %>
              <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Exhibit</th>
                      <th>Source</th>
                      <th>Date Collected</th>
                      <th>Description</th>
                      <th>Stored Location</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (evidences || []).forEach((e, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= e.exhibit_no || '-' %></td>
                        <td><%= e.source || '-' %></td>
                        <td class="small"><%= fmtDate(e.date_collected) %></td>
                        <td class="small"><%= e.description || '-' %></td>
                        <td class="small"><%= e.stored_location || '-' %></td>
                      </tr>
