                <table class="table table-sm table-bordered align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Claim</th>
                      <th>Trigger Date</th>
                      <th>Deadline</th>
                      <th>Status</th>
                      <th>Notes</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (caseClaims || []).forEach((cc, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td>
                          <div class="fw-semibold"><%= cc.claim_key || 'Claim' %></div>
                          <% if (cc.is_primary) { %>
                            <span class="badge bg-primary-subtle text-primary">Primary</span>
                          <% } %>
                        </td>
                        <td class="small"><%= fmtDate(cc.trigger_date) %></td>
                        <td class="small"><%= fmtDate(cc.limitation_deadline) %></td>
                        <td>
                          <% if (cc.status === 'expired') { %>
                            <span class="badge bg-danger-subtle text-danger">Expired</span>
                          <% } else if (cc.status === 'warning') { %>
                            <span class="badge bg-warning-subtle text-warning">Warning</span>
                          <% } else { %>
                            <span class="badge bg-success-subtle text-success">Open</span>
                          <% } %>
                        </td>
                        <td class="small"><%= cc.notes || '-' %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-muted small">No limitation claims available yet.</div>
            <% } %>
          </div>
        </div>


      <!-- Deadlines -->
      <div class="tab-pane fade" id="deadlines" role="tabpanel">
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <span class="fw-semibold"><i class="ti ti-calendar me-1"></i> CPR Deadlines</span>
          </div>
          <div class="card-body">
            <% if (cprDeadlines && cprDeadlines.length) { %>
              <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Event</th>
                      <th>Rule</th>
                      <th>Due Date</th>
                      <th>Status</th>
                      <th>Notes</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (cprDeadlines || []).forEach((d, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= d.event_label || d.event_key || '-' %></td>
                        <td class="small text-muted"><%= d.rule_reference || '-' %></td>
                        <td class="small"><%= fmtDate(d.due_date) %></td>
                        <td><span class="badge bg-light text-dark border text-capitalize"><%= d.status || 'not_set' %></span></td>
                        <td class="small"><%= d.notes || '-' %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-muted small">No CPR deadlines recorded yet.</div>
            <% } %>
          </div>
        </div>

  
      </div>
    </div>
  </div>
