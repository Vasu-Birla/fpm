<%
  const fmtDate = (d, withTime = false) => {
    if (!d) return '-';
    try {
      const dt = new Date(d);
      if (isNaN(dt)) return String(d);
      const pad = n => (n < 10 ? '0' + n : '' + n);
      const date = dt.getFullYear() + '-' + pad(dt.getMonth() + 1) + '-' + pad(dt.getDate());
      if (!withTime) return date;
      return date + ' ' + pad(dt.getHours()) + ':' + pad(dt.getMinutes());
    } catch (e) {
      return '-';
    }
  };

  const caseNumber = caseData.case_number || caseData.case_id;
  const status = caseData.status || 'Open';
  const priority = caseData.priority || 'Normal';

  const statusClass =
    status === 'Open'
      ? 'badge badge-soft-success text-success border border-success'
      : status === 'OnHold'
      ? 'badge badge-soft-warning text-warning border border-warning'
      : status === 'Closed'
      ? 'badge badge-soft-secondary text-secondary border border-secondary'
      : 'badge badge-soft-dark text-dark border border-dark';

  const priorityClass =
    priority === 'Critical'
      ? 'badge bg-danger text-white'
      : priority === 'High'
      ? 'badge badge-soft-danger text-danger border border-danger'
      : priority === 'Low'
      ? 'badge badge-soft-secondary text-secondary border border-secondary'
      : 'badge badge-soft-primary text-primary border border-primary';

  const firmName = firm?.firm_name || 'Law Firm';
  const primaryClient = caseData.primary_client || null;
  const primaryClientName = primaryClient
    ? (primaryClient.type === 'Business'
      ? (primaryClient.business_name || (primaryClient.first_name + ' ' + primaryClient.last_name))
      : ((primaryClient.first_name || '') + ' ' + (primaryClient.last_name || '')).trim())
    : '';

  const teamBuckets = [
    { key: 'leadLawyers', label: 'Lead Lawyer' },
    { key: 'lawyers', label: 'Lawyers' },
    { key: 'paralegals', label: 'Paralegals' },
    { key: 'finance', label: 'Finance' },
  ];

  const teamData = assignedTeam || { leadLawyers: [], lawyers: [], paralegals: [], finance: [] };
%>

<style>
