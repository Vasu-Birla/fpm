            <div class="card shadow-sm mb-4">
              <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="fw-semibold"><i class="ti ti-briefcase me-1"></i> Case Summary</span>
                <span class="badge bg-primary-subtle text-primary"><%= caseData.type || 'Case' %></span>
              </div>
              <div class="card-body">
                <div class="row g-3">
                  <div class="col-md-4">
                    <div class="small text-muted">Case Number</div>
                    <div class="fw-semibold"><%= caseNumber %></div>
                  </div>
                  <div class="col-md-4">
                    <div class="small text-muted">Practice Areas</div>
                    <div>
                      <% if (caseData.practiceAreas && caseData.practiceAreas.length) { %>
                        <% caseData.practiceAreas.forEach(pa => { %>
                          <span class="badge bg-light text-dark border me-1 mb-1">
                            <%= pa.name %><%= pa.CasePracticeArea?.is_primary ? ' (Primary)' : '' %>
                          </span>
                        <% }); %>
                      <% } else { %>
                        <span class="text-muted small">Not set</span>
                      <% } %>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="small text-muted">Jurisdiction</div>
                    <div class="fw-semibold"><%= caseData.jurisdiction || '-' %></div>
                  </div>
                  <div class="col-md-6">
                    <div class="small text-muted">Primary Client</div>
                    <% if (primaryClient) { %>
                      <div class="fw-semibold"><%= primaryClientName || 'Client' %></div>
                      <div class="small text-muted"><%= primaryClient.email || '-' %></div>
                      <div class="small text-muted">
                        <%= (primaryClient.country_code || '') + ' ' + (primaryClient.contact || '') %>
                      </div>
                    <% } else { %>
                      <div class="text-muted small">No primary client linked.</div>
                    <% } %>
                  </div>
                  <div class="col-md-6">
                    <div class="small text-muted">Key Dates</div>
                    <div class="small">Opened: <span class="fw-semibold"><%= fmtDate(caseData.opened_at) %></span></div>
                    <div class="small">Closed: <span class="fw-semibold"><%= fmtDate(caseData.closed_at) %></span></div>
                  </div>
                  <div class="col-12">
                    <div class="small text-muted">Case Description</div>
                    <div class="border rounded p-3 bg-light-subtle case-desc">
                      <%= caseData.description || 'No case description provided.' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="d-flex flex-column gap-4">
              <div class="card shadow-sm">
                <div class="card-header bg-light">
                  <span class="fw-semibold"><i class="ti ti-building-bank me-1"></i> Firm</span>
                </div>
                <div class="card-body">
                  <div class="d-flex align-items-center gap-3 mb-3">
                    <% if (firm?.firm_logo) { %>
                      <img src="/secure/file_stream?s3key=<%= encodeURIComponent(firm.firm_logo) %>"
                           alt="<%= firmName %>"
                           class="rounded-circle border"
                           style="width:46px;height:46px;object-fit:cover;">
                    <% } else { %>
                      <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border"
                           style="width:46px;height:46px;font-weight:600;">
                        <%= firmName.slice(0, 1).toUpperCase() %>
