                <div class="card-header bg-light">
                  <span class="fw-semibold"><%= bucket.label %></span>
                </div>
                <div class="card-body">
                  <% if (members.length) { %>
                    <ul class="list-unstyled mb-0">
                      <% members.forEach(m => { %>
                        <li class="mb-2">
                          <div class="fw-semibold"><%= m.name || 'Staff' %></div>
                          <% if (m.email) { %>
                            <div class="small text-muted">
                              <a href="mailto:<%= m.email %>"><%= m.email %></a>
                            </div>
                          <% } else { %>
                            <div class="small text-muted">Email not provided.</div>
                          <% } %>
                        </li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    <div class="text-muted small">No team members assigned yet.</div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

