                    <div class="small text-muted"><%= primaryClient.email || '-' %></div>
                    <div class="small text-muted mb-2">
                      <%= (primaryClient.country_code || '') + ' ' + (primaryClient.contact || '') %>
                    </div>
                    <div class="badge bg-light text-dark border">
                      <%= primaryClient.type || 'Client' %>
                    </div>
                  <% } else { %>
                    <div class="text-muted small">No client details available.</div>
                  <% } %>
                </div>
              </div>
