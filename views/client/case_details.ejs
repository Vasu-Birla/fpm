                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Title</th>
                      <th>Type</th>
                      <th>File</th>
                      <th>Uploaded By</th>
                      <th>Uploaded At</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (draftingDocs || []).forEach((d, idx) => { 
                        const fname = (d.s3_key || '').split('/').pop();
                    %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td><%= d.title %></td>
                        <td class="text-capitalize"><%= d.kind || '-' %></td>
                        <td>
                          <% if (d.s3_key) { %>
                            <a class="btn btn-outline-primary btn-sm"
                               href="/secure/file_stream?s3key=<%= encodeURIComponent(d.s3_key) %>"
                               target="_blank">
                              <i class="ti ti-external-link me-1"></i>
                              <%= fname || 'View' %>
                            </a>
                          <% } else { %>
                            <span class="text-muted small">No file</span>
                          <% } %>
                        </td>
                        <td class="small text-muted"><%= d.uploaded_by || '-' %></td>
                        <td class="small text-muted"><%= fmtDate(d.created_at, true) %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-muted small">No drafting files shared yet.</div>
            <% } %>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-header bg-light">
            <span class="fw-semibold"><i class="ti ti-signature me-1"></i> E-Sign Envelopes</span>
          </div>
          <div class="card-body">
            <% if (esignEnvelopes && esignEnvelopes.length) { %>
              <div class="table-responsive">
                <table class="table table-sm table-bordered align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 4%;">#</th>
                      <th>Provider</th>
                      <th>Status</th>
                      <th>Envelope</th>
                      <th>Created</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% (esignEnvelopes || []).forEach((env, idx) => { %>
                      <tr>
                        <td><%= idx + 1 %></td>
                        <td class="text-capitalize"><%= env.provider || '-' %></td>
                        <td class="text-capitalize"><%= env.status || '-' %></td>
                        <td class="small text-muted"><%= env.envelope_id || env.document_id || '-' %></td>
                        <td class="small text-muted"><%= fmtDate(env.created_at || env.createdAt, true) %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-muted small">No e-sign envelopes available yet.</div>
            <% } %>
          </div>
        </div>
      </div>

