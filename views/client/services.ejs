<!-- Header Start -->
<%- include('clientheader.ejs'); %>
<!-- Header End -->

<!-- Banner Start -->
<section class="main-inner-banner">
  <!-- banner content commented -->
</section>
<!-- Banner End -->

<!-- Breadcrumb Start -->
<div class="breadcrumb-box">
  <ul>
    <li>
      <a href="/home" title="HOME">HOME</a>
    </li>
    <li>Services</li>
  </ul>
</div>
<!-- Breadcrumb End -->

<!-- Our Services Start -->
<section class="main-service-page-list">
  <div class="container">

    <%
      // pick a safe default service for the "Contact Us Now" buttons
      const firstGroup = (serviceTree && serviceTree.length) ? serviceTree[0] : null;
      const firstService = firstGroup
        ? ((firstGroup.children && firstGroup.children.length) ? firstGroup.children[0] : firstGroup)
        : null;

      const firstServiceId = firstService?.practice_area_id || null;
      const contactUrl = firstServiceId ? '/service_firms' : '/contact';
    %>

    <% if (serviceTree && serviceTree.length) { %>
      <div class="services-list">
        <% serviceTree.forEach((group) => { %>
          <div class="services-group mb-5">

            <div class="row">
              <div class="col-12">
                <div class="section-title">
                  <h5 class="h3-title"><%= group.name %></h5>
                  <p><%= group.description || group.summary || '' %></p>
                </div>
              </div>
            </div>

            <div class="row">
              <% const items = (group.children && group.children.length) ? group.children : [group]; %>

              <% items.forEach((service, index) => { %>
                <div class="col-md-6 col-xl-3">
                  <div class="service-box wow fadeup-animation"
                       data-wow-duration="0.8s"
                       data-wow-delay="<%= ((index % 4) * 0.1 + 0.2).toFixed(1) %>s">

                    <div class="icon"<%= service.color ? ` style="background:${service.color}"` : '' %>>
                      <img src="<%= service.icon_url %>" width="35" height="35" alt="<%= service.name %>">
                    </div>

                    <h4 class="h4-title">
                      <!-- COOKIE CLICK -->
                      <a href="/service_firms"
                         class="service-go"
                         data-id="<%= service.practice_area_id %>"
                         title="<%= service.name %>">
                        <%= service.name %>
                      </a>
                    </h4>

                    <p><%= service.description || service.summary || '' %></p>

                    <% if (service.aliases && service.aliases.length) { %>
                      <p class="mb-0">
                        <small>Also known as: <%= service.aliases.join(', ') %></small>
                      </p>
                    <% } %>

                  </div>
                </div>
              <% }) %>
            </div>

          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="services-list">
        <div class="row">
          <div class="col-12">
            <div class="service-box">
              <h4 class="h4-title">Services coming soon</h4>
              <p>We are curating our practice areas. Please check back shortly.</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>

  </div>
</section>
<!-- Our Services End -->

<!-- Clients We Serve Start -->
