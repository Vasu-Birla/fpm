<script>
(() => {
  // Case -> Firm lock
  const caseSelect = document.getElementById("case_id");
  const firmSelect = document.getElementById("firm_id");

  const syncFirmLock = () => {
    if (!caseSelect || !firmSelect) return;
    const selected = caseSelect.options[caseSelect.selectedIndex];
    const firmId = selected?.dataset?.firmId || "";
    if (caseSelect.value && firmId) {
      firmSelect.value = firmId;
      firmSelect.disabled = true;
    } else {
      firmSelect.disabled = false;
    }
  };

  if (caseSelect && firmSelect) {
    caseSelect.addEventListener("change", syncFirmLock);
    syncFirmLock();
  }

  // UTC formatter
  const formatter = new Intl.DateTimeFormat(undefined, { dateStyle: "medium", timeStyle: "short" });
  document.querySelectorAll("[data-utc]").forEach((el) => {
    const v = el.getAttribute("data-utc");
    if (!v) return;
    const d = new Date(v);
    if (Number.isNaN(d.getTime())) return;
    el.textContent = formatter.format(d);
    el.title = d.toLocaleString();
  });

  // Ticket search
  const search = document.getElementById("ticketSearch");
  const itemsWrap = document.getElementById("ticketItems");
  if (search && itemsWrap) {
    search.addEventListener("input", () => {
      const q = (search.value || "").trim().toLowerCase();
      itemsWrap.querySelectorAll(".ticket-row").forEach((a) => {
        const hay = a.getAttribute("data-search") || "";
        a.style.display = (!q || hay.includes(q)) ? "" : "none";
      });
    });
  }

  // Auto-scroll chat bottom
  const chat = document.getElementById("chatScroll");
  if (chat) chat.scrollTop = chat.scrollHeight;
})();
</script>

