<section class="page-support py-5">
  <div class="container support-wrap">

    <div class="support-topbar">
      <div>
        <h2>Support Center</h2>
        <p>Open a ticket, then continue the conversation in a clean, full-size chat below.</p>
      </div>
      <div class="pill">
        <i class="ti ti-ticket"></i>
        <span><%= ticketsCount || 0 %> Tickets</span>
      </div>
    </div>

    <% if (output && output.message) { %>
      <div class="alert alert-<%= output.type || 'info' %>">
        <%= output.message %>
      </div>
    <% } %>

    <!-- TOP: Form + 3 cards -->
    <div class="support-grid-top">
      <div class="cardx form-card">
        <h3>Open a new support ticket</h3>
        <p class="desc">Select a case or firm so we can route your request quickly.</p>

        <form method="post" action="/support" class="row g-3">
          <input type="hidden" name="_csrf" value="<%= csrfToken || '' %>">

          <div class="col-12">
            <div class="lbl">Case</div>
            <select  class="inp" name="case_id" id="case_id" data-ignore-kilvish="Yes">
              <option value="">Not related to a case</option>
              <% (cases || []).forEach((kase) => { %>
                <option value="<%= kase.case_id %>" data-firm-id="<%= kase.firm_id %>">
                  <%= kase.title %><%= kase.case_number ? ` (${kase.case_number})` : '' %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="col-12">
            <div class="lbl">Firm</div>
            <select data-ignore-kilvish="Yes" class="inp" name="firm_id" id="firm_id">
              <option value="">Not related to a firm (Direct to Admin)</option>
              <% (firms || []).forEach((firm) => { %>
                <option value="<%= firm.firm_id %>" <%= activeFirmId && Number(activeFirmId) === Number(firm.firm_id) ? 'selected' : '' %>>
                  <%= firm.firm_name %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="col-12">
            <div class="lbl">Subject</div>
            <input type="text" class="inp" name="subject" id="subject" data-ignore-kilvish="Yes"
                   placeholder="Case or request summary" required>
          </div>

          <div class="col-12">
            <div class="lbl">Contact Email</div>
            <input type="email" class="inp" value="<%= clientAccount?.email || '' %>" readonly>
          </div>

          <div class="col-12">
            <div class="lbl">Message</div>
            <textarea class="inp" name="message" id="message" rows="6" data-ignore-kilvish="Yes"
                      placeholder="Describe your issue, relevant dates, and any deadlines..." required></textarea>
          </div>

          <div class="col-12 d-flex gap-2 flex-wrap">
            <button type="submit" class="btn btn-primary btnx">Submit Ticket</button>
          </div>

          <div class="col-12">
            <p class="form-note">If you select a case, the firm will lock automatically. Choose no firm to route directly to admin.</p>
          </div>
        </form>
      </div>

      <div class="side-stack">
        <div class="cardx side-card">
          <h5>Contact Support</h5>
          <p class="mut">Mon–Fri, 9:00 AM – 6:00 PM</p>

          <div class="contact-row">
            <div class="iconbox"><i class="ti ti-phone"></i></div>
            <div><span>Phone</span><strong>+1 876 123 4567</strong></div>
          </div>
          <div class="contact-row">
            <div class="iconbox"><i class="ti ti-mail"></i></div>
            <div><span>Email</span><strong>support@elaw.com</strong></div>
          </div>
          <div class="contact-row">
            <div class="iconbox"><i class="ti ti-map-pin"></i></div>
            <div><span>Office</span><strong>Kingston, Jamaica</strong></div>
          </div>
        </div>

        <div class="cardx side-card">
          <h5>Help us resolve faster</h5>
          <ul class="checklist">
            <li><i class="ti ti-check"></i>Include your case ID if available.</li>
            <li><i class="ti ti-check"></i>Share relevant dates / deadlines.</li>
            <li><i class="ti ti-check"></i>Tell us the outcome you want.</li>
          </ul>
        </div>

        <div class="cardx side-card cta">
          <h5>Need immediate guidance?</h5>
          <p class="mut">For time-sensitive matters, schedule a call with a legal advisor.</p>
          <a href="/contact">Talk to an Advisor</a>
        </div>
      </div>
    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken || '' %>">

    <div class="card shadow-sm mb-3">
      <div class="card-body d-flex flex-wrap align-items-end gap-3">
        <div>
          <label class="form-label mb-1" for="ticketFirmFilter">Firm</label>
          <select id="ticketFirmFilter" class="form-select" data-ignore-kilvish="yes">
            <option value="">All Firms</option>
            <% (firms || []).forEach(f => { %>
              <option value="<%= f.firm_id %>"><%= f.firm_name %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label class="form-label mb-1" for="ticketCaseFilter">Case</label>
          <select id="ticketCaseFilter" class="form-select" data-ignore-kilvish="yes">
            <option value="">All Cases</option>
            <% (cases || []).forEach(kase => { %>
              <option value="<%= kase.case_id %>">
                <%= kase.title %><%= kase.case_number ? ` (${kase.case_number})` : '' %>
              </option>
            <% }) %>
          </select>
        </div>

        <div>
          <label class="form-label mb-1" for="ticketStatusFilter">Status</label>
          <select id="ticketStatusFilter" class="form-select" data-ignore-kilvish="yes">
            <option value="">All</option>
            <option value="open">Open</option>
            <option value="pending">Pending</option>
            <option value="on_hold">On Hold</option>
            <option value="resolved">Resolved</option>
            <option value="closed">Closed</option>
          </select>
        </div>

        <div>
          <label class="form-label mb-1" for="ticketPriorityFilter">Priority</label>
          <select id="ticketPriorityFilter" class="form-select" data-ignore-kilvish="yes">
            <option value="">All</option>
            <option value="low">Low</option>
            <option value="normal">Normal</option>
            <option value="high">High</option>
            <option value="urgent">Urgent</option>
          </select>
        </div>

        <div class="ms-auto">
          <label class="form-label mb-1" for="ticketSearch">Search</label>
          <input id="ticketSearch" type="text" class="form-control"
                 placeholder="Subject, ticket number, firm..."
                 data-ignore-kilvish="yes">
        </div>

        <div>
          <button id="resetTicketFilters" class="btn btn-outline-secondary">Reset</button>
        </div>

        <div class="ms-auto">
          <a href="/support/view" class="btn btn-outline-primary">Open Latest</a>
        </div>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table id="supportTable"
                 data-auto-dt="false"
                 class="table table-striped table-bordered table-nowrap w-100">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Ticket</th>
                <th>Case</th>
                <th>Firm</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Last Activity</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody><!-- DataTables will fill --></tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
document.addEventListener("DOMContentLoaded", () => {
  // Case -> Firm lock
  const caseSelect = document.getElementById("case_id");
  const firmSelect = document.getElementById("firm_id");

  const syncFirmLock = () => {
    if (!caseSelect || !firmSelect) return;
    const selected = caseSelect.options[caseSelect.selectedIndex];
    const firmId = selected?.dataset?.firmId || "";
    if (caseSelect.value && firmId) {
      firmSelect.value = firmId;
      firmSelect.disabled = true;
    } else {
      firmSelect.disabled = false;
    }
  };

  if (caseSelect && firmSelect) {
    caseSelect.addEventListener("change", syncFirmLock);
    syncFirmLock();
  }

  const fx = window.axiosElaw || window.axios;
  if (!fx || !window.jQuery || !jQuery.fn.DataTable) return;

  const $tbl = jQuery("#supportTable");
  const $firm = jQuery("#ticketFirmFilter");
  const $case = jQuery("#ticketCaseFilter");
  const $status = jQuery("#ticketStatusFilter");
  const $priority = jQuery("#ticketPriorityFilter");
  const $search = jQuery("#ticketSearch");
  const $reset = jQuery("#resetTicketFilters");

  function fmtDate(d) {
    try {
      const dt = new Date(d);
      if (isNaN(dt)) return "-";
      return dt.toLocaleString();
    } catch {
      return "-";
    }
  }

  function statusBadge(st) {
    if (st === "open") {
      return '<span class="badge badge-soft-success text-success border border-success">Open</span>';
    }
    if (st === "pending") {
      return '<span class="badge badge-soft-warning text-warning border border-warning">Pending</span>';
    }
    if (st === "on_hold") {
      return '<span class="badge badge-soft-secondary text-secondary border border-secondary">On Hold</span>';
    }
    if (st === "resolved") {
      return '<span class="badge badge-soft-primary text-primary border border-primary">Resolved</span>';
    }
    if (st === "closed") {
      return '<span class="badge badge-soft-dark text-dark border border-dark">Closed</span>';
    }
    return '<span class="badge badge-soft-light text-muted border">Unknown</span>';
  }

  function priorityBadge(p) {
    if (p === "urgent") {
      return '<span class="badge bg-danger text-white">Urgent</span>';
    }
    if (p === "high") {
      return '<span class="badge badge-soft-danger text-danger border border-danger">High</span>';
    }
    if (p === "low") {
      return '<span class="badge badge-soft-secondary text-secondary border border-secondary">Low</span>';
    }
    return '<span class="badge badge-soft-primary text-primary border border-primary">Normal</span>';
  }

  function firmLabel(r) {
    const name = r.firm_name || "Firm";
    if (r.firm_logo) {
      const url = "/secure/file_stream?s3key=" + encodeURIComponent(r.firm_logo);
      return `
        <div class="d-flex align-items-center gap-2">
          <img src="${url}" alt="${name}" class="rounded-circle border"
               style="width:30px;height:30px;object-fit:cover;">
          <div class="fw-semibold">${name}</div>
        </div>
      `;
    }
    return `
      <div class="d-flex align-items-center gap-2">
        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border"
             style="width:30px;height:30px;font-weight:600;">
          ${name.slice(0, 1).toUpperCase()}
        </div>
        <div class="fw-semibold">${name}</div>
      </div>
    `;
  }

  const dt = $tbl.DataTable({
    responsive: true,
    dom:
      "<'row mb-3'<'col-md-6 d-flex align-items-center'B><'col-md-6 d-flex justify-content-end'f>>" +
      "<'row'<'col-sm-12'tr>>" +
      "<'row mt-3'<'col-md-5'i><'col-md-7 d-flex justify-content-end'p>>",
    buttons: [
      { extend: "excelHtml5", className: "btn btn-primary me-2" },
      { extend: "csvHtml5", className: "btn btn-primary me-2" }
    ],
    pageLength: 50,
    searching: false,
    serverSide: false,
    ajax: function(data, cb) {
      const payload = {
        firm_id: $firm.val() || "",
        case_id: $case.val() || "",
        status: $status.val() || "",
        priority: $priority.val() || "",
        q: $search.val() || ""
      };

      fx.post("/support/json", payload)
        .then(({ data }) => {
          if (!data?.success) {
            window.kilToast?.danger?.(data?.message || "Failed to load tickets.");
            cb({ data: [] });
            return;
          }

          const rows = (data.rows || []).map((r, idx) => {
            const ticketLabel = `
              <div class="fw-semibold">${r.subject || ""}</div>
              <div class="text-muted small">${r.ticket_number || ""}</div>
            `;

            return {
              idx: idx + 1,
              ticket: ticketLabel,
              caseLabel: r.case_label || "-",
              firm: firmLabel(r),
              status: statusBadge(r.status),
              priority: priorityBadge(r.priority),
              lastActivity: fmtDate(r.last_activity_iso),
                actions: (String(r.status || '').toLowerCase() === 'closed')
        ? `<span class="badge bg-success">Closed</span>`
        : `
            <button type="button"
                    class="btn btn-sm btn-outline-primary ticket-view"
                    data-id="${r.ticket_id}">
              View
            </button>
          `
            };
          });

          cb({ data: rows });
        })
        .catch(err => {
          console.error("support_json ajax error:", err);
          window.kilToast?.danger?.(err?.response?.data?.message || "Failed to load tickets.");
          cb({ data: [] });
        });
    },
    columns: [
      { data: "idx" },
      { data: "ticket" },
      { data: "caseLabel" },
      { data: "firm" },
      { data: "status" },
      { data: "priority" },
      { data: "lastActivity" },
      { data: "actions", orderable: false, searchable: false }
    ]
  });

  const $wrapper = $tbl.closest(".dataTables_wrapper");
  jQuery(".dataTables_filter", $wrapper).hide();

  function reloadWithDelay() {
    clearTimeout(window.__client_ticket_timer);
    window.__client_ticket_timer = setTimeout(() => dt.ajax.reload(), 250);
  }

  $firm.on("change", reloadWithDelay);
  $case.on("change", reloadWithDelay);
  $status.on("change", reloadWithDelay);
  $priority.on("change", reloadWithDelay);
  $search.on("input", reloadWithDelay);

  $reset.on("click", function(e) {
    e.preventDefault();
    $firm.val("");
    $case.val("");
    $status.val("");
    $priority.val("");
    $search.val("");
    dt.ajax.reload();
  });

  $tbl.on("click", ".ticket-view", function() {
    const id = this.dataset.id;
    if (!id) return;
    document.cookie = `elaw_ticketId=${id}; path=/;`;
    window.location.href = "/support/view";
  });
});
</script>


