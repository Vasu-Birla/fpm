		<script>
  // Lightweight toast
  (function(){
    const wrap = document.createElement('div');
    wrap.className = 'kwe-toast-wrap';
    document.addEventListener('DOMContentLoaded', () => document.body.appendChild(wrap));

    window.kweToast = function(type, msg, ms=2200){
      const d = document.createElement('div');
      d.className = `kwe-toast kwe-${type}`;
      d.textContent = msg;
      wrap.appendChild(d);
      setTimeout(()=> d.remove(), ms);
    }
  })();
</script>
