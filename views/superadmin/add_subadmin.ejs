document.addEventListener('DOMContentLoaded', function () {
    const reportCheckbox = document.querySelector('input[name="/reports"]');
    const subPermissionContainer = document.getElementById('reportSubPermission');
    const blockTabsYes = document.getElementById('blockTabsYes');
    const blockTabsNo = document.getElementById('blockTabsNo');
    const blockTabsOptions = document.getElementById('blockTabsOptions');
    const reportTabCheckboxes = document.querySelectorAll('.report-tab');
    const selectAll = document.getElementById('checkall');

    const blockPermissions = [
        '/block_pending',
        '/block_inprogress',
        '/block_flagged',
        '/block_cleared'
    ];

    const expectedPermissions = [
        '/superadmin',
        '/add_client',
        '/view_clients',
        '/add_candidate',
        '/view_candidates',
        '/role_mgmt',
        '/reports',
        '/screening'
    ];

    // ✅ Show/hide sub-permission section on report checkbox toggle
    reportCheckbox.addEventListener('change', function () {
        subPermissionContainer.classList.toggle('d-none', !this.checked);
        if (!this.checked) {
            blockTabsNo.checked = true;
            blockTabsOptions.classList.add('d-none');
            reportTabCheckboxes.forEach(cb => cb.checked = false);
        }
    });

    // ✅ Show/hide tab block options based on YES/NO
    blockTabsYes.addEventListener('change', function () {
        if (this.checked) {
            blockTabsOptions.classList.remove('d-none');
        }
    });

    blockTabsNo.addEventListener('change', function () {
        if (this.checked) {
            blockTabsOptions.classList.add('d-none');
            reportTabCheckboxes.forEach(cb => cb.checked = false);
        }
    });

    // ✅ Select All handler (excluding block permissions)
    selectAll.addEventListener('change', function () {


 document.getElementById('customCheckbox1').checked = true;

        const checkboxes = document.querySelectorAll('.permission-checkbox');
         
           
        checkboxes.forEach(cb => {
            if (!blockPermissions.includes(cb.name)) {
                cb.checked = this.checked;
            }
        });

        // Trigger sub-section visibility
        if (this.checked && reportCheckbox.checked) {
            subPermissionContainer.classList.remove('d-none');
            blockTabsYes.checked = true;
            blockTabsOptions.classList.remove('d-none');
        } else {
            subPermissionContainer.classList.add('d-none');
            blockTabsNo.checked = true;
            blockTabsOptions.classList.add('d-none');
        }

        // Optionally uncheck block checkboxes even when toggling "select all"
        reportTabCheckboxes.forEach(cb => cb.checked = false);

         document.getElementById('customCheckbox1').checked = true;
    });

    // ✅ Collect permissions with full logic
    function collectPermissions() {
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        let permissions = [];

        // Collect checked values (excluding block checkboxes for 'full' logic)
        checkboxes.forEach((checkbox) => {
            if (checkbox.checked && checkbox.name.trim() !== '') {
                permissions.push(checkbox.name);
            }
        });

        // ⚠️ Do not consider block permissions for 'full'
        const hasAllMainPermissions = expectedPermissions.every(p => permissions.includes(p));
        const hasAnyBlockPermission = blockPermissions.some(p => permissions.includes(p));

        // Remove existing 'full' if present
        permissions = permissions.filter(p => p !== 'full');

        // ✅ Add 'full' only if all main permissions are checked AND no block permissions
        if (hasAllMainPermissions && !hasAnyBlockPermission) {
            permissions.push('full');
        }

        // alert(permissions.join(','))
        // return;

        document.getElementById('permissions').value = permissions.join(',');
    }

    document.querySelector('form').addEventListener('submit', collectPermissions);

    // Optional: listen to changes in block checkboxes to re-evaluate full logic live (optional)
    reportTabCheckboxes.forEach(cb => {
        cb.addEventListener('change', () => {
            // Uncheck "Select All" if manually toggled
           
            selectAll.checked = false;
        });
    });
});





