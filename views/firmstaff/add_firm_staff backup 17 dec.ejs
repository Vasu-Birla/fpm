<script>
(function(){
  const fx = window.axiosElaw;


  const firmSel = document.getElementById('firm_id');
  const roleSel = document.getElementById('firm_role_id');
  const emailEl = document.getElementById('email');
  const phoneEl = document.getElementById('full_contact');
  const relativeRows = document.getElementById('relativeRows');
  const addRelativeBtn = document.getElementById('addRelativeRow');

  // ensure kiltel runs on all phone inputs (including dynamic) then rename hidden fields where needed
  function renameKiltelHidden(wrapper){
    if (!wrapper) return;
    const contactName = wrapper.dataset.kiltelNameContact;
    const codeName = wrapper.dataset.kiltelNameCode;
    const contactHidden = wrapper.querySelector('input[type="hidden"][name="contact"]');
    const codeHidden = wrapper.querySelector('input[type="hidden"][name="country_code"]');
    if (contactHidden && contactName) contactHidden.name = contactName;
    if (codeHidden && codeName) codeHidden.name = codeName;
  }

  function initKiltelWrapper(wrapper){
    if (typeof window.kiltelInit === 'function') {
      window.kiltelInit();
    }
    renameKiltelHidden(wrapper);
  }

  if (typeof window.kiltelInit === 'function') {
    window.kiltelInit();
  }
  document.querySelectorAll('.kiltel-phone-wrap[data-kiltel-name-contact]').forEach(renameKiltelHidden);

  function refreshRelativeRemovers(){
    if (!relativeRows) return;
    const rows = relativeRows.querySelectorAll('.relative-row');
    rows.forEach(btnRow => {
      const btn = btnRow.querySelector('.remove-relative');
      if (btn) btn.disabled = rows.length === 1;
    });
  }

  function addRelativeRow(){
    if (!relativeRows) return;
    const row = document.createElement('div');
    row.className = 'relative-row border rounded p-3';
    row.innerHTML = `
      <div class="row g-3 align-items-end">
        <div class="col-md-5">
          <label class="form-label fw-medium">Relative Name</label>
          <input type="text" name="relative_name[]" class="form-control" placeholder="Jane Doe">
        </div>
        <div class="col-md-6">
          <label class="form-label fw-medium">Relative Contact</label>
          <div class="input-group kiltel-phone-wrap" data-kiltel-name-contact="relative_contact[]" data-kiltel-name-code="relative_country_code[]">
            <button type="button" class="kiltel-country-trigger"></button>
            <input data-ignore-kilvish="Yes" type="tel" class="form-control" data-kilvish-tel data-kilvish-preferred="JM,IN" data-kiltel-init="JM" data-kiltel-validation="yes" placeholder="+1 876 000 0000">
            <input type="hidden" name="country_code">
            <input type="hidden" name="contact">
          </div>
        </div>
        <div class="col-md-1">
          <button type="button" class="btn btn-outline-danger w-100 remove-relative" title="Remove relative"><i class="ti ti-x"></i></button>
        </div>
      </div>
    `;
    relativeRows.appendChild(row);
    initKiltelWrapper(row.querySelector('.kiltel-phone-wrap'));
    refreshRelativeRemovers();
  }

  addRelativeBtn?.addEventListener('click', addRelativeRow);

  relativeRows?.addEventListener('click', (e) => {
    const btn = e.target.closest('.remove-relative');
    if (!btn) return;
    const row = btn.closest('.relative-row');
    if (!row) return;
    if (relativeRows.querySelectorAll('.relative-row').length === 1) return;
    row.remove();
    refreshRelativeRemovers();
  });
  refreshRelativeRemovers();

  firmSel?.addEventListener('change', async ()=>{
    roleSel.innerHTML = `<option value="">Loading...</option>`;
    roleSel.disabled = true;
    const firm_id = firmSel.value || '';
    if (!firm_id) { roleSel.innerHTML = `<option value="">Select Role</option>`; return; }
    try {
      const { data } = await fx.post('/firmstaff/firm_roles_json', { firm_id });
      if (!data?.success) throw new Error(data?.message || 'Failed to load roles.');
      roleSel.innerHTML = `<option value="">Select Role</option>` + (data.roles||[]).map(r => `<option value="${r.firm_role_id}">${r.name}</option>`).join('');
      roleSel.disabled = false;
    } catch (err) {
      console.error(err); 
      kilToast.danger(err?.response?.data?.message || err?.message || 'Failed to load roles.')
      roleSel.innerHTML = `<option value="">Select Role</option>`;
    }
  });

  // email uniqueness (per-firm)
  emailEl?.addEventListener('change', async ()=>{
    const firm_id = firmSel.value || '';
    const email   = (emailEl.value||'').trim().toLowerCase();
    if ( !email) { document.getElementById('emailError').textContent=''; return; }
    try {
      const { data } = await fx.post('/firmstaff/check_firm_staff_email', { email, firm_id });
      if (data?.exists) {
        document.getElementById('emailError').textContent = `Email (${email}) already exists in this firm.`;       
        kilToast.danger(`Email ${email} already exists.`)
        emailEl.value = '';
      } else {
        document.getElementById('emailError').textContent = '';
      }
    } catch (err) {
      document.getElementById('emailError').textContent = err?.response?.data?.message || 'Email check failed.';
      console.log("error in checkin firm email ",err )
      kilToast.danger(err?.response?.data?.message || 'Email check failed.')
    }
  });

  // phone uniqueness (per-firm)
  phoneEl?.addEventListener('change', async ()=>{
    const firm_id = firmSel.value || '';
    const phoneNumber = (phoneEl.value||'').trim();
    if ( !phoneNumber) { document.getElementById('phoneError').textContent=''; return; }
    try {
      const { data } = await fx.post('/firmstaff/check_firm_staff_phonenumber', { phoneNumber, firm_id });
      if (data?.exists) {
        document.getElementById('phoneError').textContent = `Contact (${phoneNumber}) already exists in this firm.`;
     
        kilToast.danger(`Contact ${phoneNumber} already exists.`)
        phoneEl.value = '';
      } else {
        document.getElementById('phoneError').textContent = '';
      }
    } catch (err) {
      document.getElementById('phoneError').textContent = err?.response?.data?.message || 'Phone check failed.';
       console.log("error in checkin firm phonenumber ",err )
      kilToast.danger(err?.response?.data?.message || 'Phone check failed.')     
    }
  });

  // Submit
  document.getElementById('kilform')?.addEventListener('submit', async (e)=>{
    e.preventDefault();
    const fd = new FormData(e.currentTarget);
    try {
      const { data } = await fx.post('/firmstaff/add_firm_staff', fd);
      if (!data?.success) {  kilToast.danger( data?.message || 'Failed to create user.'); return; }
    kilToast.success( data?.message || 'User created.');
      location.href = '/firmstaff/staff_list';
    } catch (err) {
      console.error(err);
    kilToast.danger( err?.response?.data?.message || 'Failed to create user.');
    }
  });
})();
</script>
