<div class="page-wrapper">
  <div class="content">
    <div class="d-flex align-items-center justify-content-between pb-3 mb-3 border-bottom">
      <h4 class="fw-bold mb-0">Add Firm User</h4>
      <div><a href="/firmstaff/staff_list" class="btn btn-outline-secondary btn-md fs-13"><i class="ti ti-chevron-left me-1"></i> Back to List</a></div>
    </div>

    <form id="kilform" method="POST" enctype="multipart/form-data">
      <div class="card">
        <div class="card-body">
          <div class="row g-3">

            <!-- Firm -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="firm_id">Law Firm <span class="text-danger">*</span></label>
              <select data-ignore-kilvish="Yes" id="firm_id" name="firm_id" class="form-select" required>
                <option value="">Select Firm</option>
                <% (firms || []).forEach(f => { %>
                  <option value="<%= f.firm_id %>"><%= f.firm_name %></option>
                <% }) %>
              </select>
              <div class="form-text">Choose the firm this user belongs to.</div>
            </div>

            <!-- Role -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="firm_role_id">User Role <span class="text-danger">*</span></label>
              <select data-ignore-kilvish="Yes" id="firm_role_id" name="firm_role_id" class="form-select" required disabled>
                <option value="">Select Role</option>
              </select>
              <div class="form-text">Roles are filtered by firm. <strong>FirmAdmin</strong> is excluded.</div>
            </div>

            <!-- Avatar -->
            <div class="col-12">
              <label class="form-label mb-1 fw-medium">Avatar (optional)</label>
              <input type="file" name="avatar" id="avatar" class="form-control">
            </div>

            <!-- Name -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="first_name">First Name <span class="text-danger">*</span></label>
              <input id="first_name" name="first_name" type="text" class="form-control" required placeholder="John">
            </div>
            <div class="col-md-6">
              <label class="form-label fw-medium" for="last_name">Last Name <span class="text-danger">*</span></label>
              <input id="last_name" name="last_name" type="text" class="form-control" required placeholder="Doe">
            </div>

            <!-- Email -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="email">Email <span class="text-danger">*</span></label>
              <input id="email" name="email" type="email" class="form-control" required placeholder="user@firm.com">
              <div id="emailError" class="text-danger small"></div>
            </div>

            <!-- Phone (kiltel) -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="full_contact">Primary Phone Number <span class="text-danger">*</span></label>
              <div class="input-group kiltel-phone-wrap">
                <button type="button" class="kiltel-country-trigger"></button>
                <input data-ignore-kilvish="Yes" type="tel" class="form-control" id="full_contact" data-kilvish-tel data-kilvish-preferred="JM,IN" data-kiltel-init="JM" data-kiltel-validation="yes" required>
                <input type="hidden" id="country_code" name="country_code">
                <input type="hidden" id="contact" name="contact">
              </div>
              <div id="phoneError" class="text-danger small"></div>
            </div>

            <!-- Secondary Phone (kiltel) -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="secondary_full_contact">Secondary Phone Number</label>
              <div class="input-group kiltel-phone-wrap" data-kiltel-name-contact="secondary_contact" data-kiltel-name-code="secondary_country_code">
                <button type="button" class="kiltel-country-trigger"></button>
                <input data-ignore-kilvish="Yes" type="tel" class="form-control" id="secondary_full_contact" data-kilvish-tel data-kilvish-preferred="JM,IN" data-kiltel-init="JM" data-kiltel-validation="yes" placeholder="+1 876 000 0000">
                <input type="hidden" name="country_code">
                <input type="hidden" name="contact">
              </div>
              <div class="form-text">Optional backup number.</div>
            </div>

            <!-- Password -->
            <div class="col-md-6">
              <label class="form-label fw-medium" for="password">Password <span class="text-danger">*</span></label>
                     <div class="input-group">
              <input id="password" name="password" type="password" class="form-control" data-kilvish-password="8_20" required placeholder="********">
              </div>
            </div>


            <!-- Relatives -->
            <div class="col-12">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <label class="form-label fw-medium mb-0">Relatives (Name & Contact)</label>
                <button type="button" class="btn btn-outline-primary btn-sm" id="addRelativeRow"><i class="ti ti-plus"></i> Add Relative</button>
              </div>
              <div id="relativeRows" class="d-flex flex-column gap-2">
                <div class="relative-row border rounded p-3">
                  <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                      <label class="form-label fw-medium">Relative Name</label>
                      <input type="text" name="relative_name[]" class="form-control" placeholder="Jane Doe">
                    </div>
                    <div class="col-md-6">
                      <label class="form-label fw-medium">Relative Contact</label>
                      <div class="input-group kiltel-phone-wrap" data-kiltel-name-contact="relative_contact[]" data-kiltel-name-code="relative_country_code[]">
                        <button type="button" class="kiltel-country-trigger"></button>
                        <input data-ignore-kilvish="Yes" type="tel" class="form-control" data-kilvish-tel data-kilvish-preferred="JM,IN" data-kiltel-init="JM" data-kiltel-validation="yes" placeholder="+1 876 000 0000">
                        <input type="hidden" name="country_code">
                        <input type="hidden" name="contact">
                      </div>
                    </div>
                    <div class="col-md-1">
                      <button type="button" class="btn btn-outline-danger w-100 remove-relative" disabled title="Remove relative"><i class="ti ti-x"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-text">Add additional relatives as needed.</div>
