
<!-- Header Start -->
<%- include('firmheader.ejs'); %>
<!-- Header End -->

<!-- Sidebar -->
<%- include('firmsidebar.ejs'); %>
<!-- Sidebar End -->

<!-- ========================
    Start Page Content
========================= -->
    
<div class="page-wrapper">

    <!-- Start Content -->
    <div class="content">

        <!-- row start -->
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <!-- page header start -->
                <div class="mb-4">
                    <h5 class="fw-bold mb-0 d-flex align-items-center"> 
                        <a href="#" class="text-dark"> 
                            <i class="ti ti-chevron-left me-1"></i>Edit Client Consultation Form
                        </a>
                    </h5>
                </div>
                <!-- page header end -->

                <!-- card start -->
                <form action="#" method="POST">
                    <div class="card">
                        <div class="card-body pb-0">
                            <div class="form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="name" class="form-label mb-1 fw-medium">Name<span class="text-danger ms-1">*</span></label>
                                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter the firstname" required>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label for="date" class="form-label mb-1 fw-medium">Date<span class="text-danger ms-1">*</span></label>
                                            <input type="date" id="date" name="date" class="form-control" placeholder="Enter the date" required>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label for="time" class="form-label mb-1 fw-medium">Time<span class="text-danger ms-1">*</span></label>
                                            <input type="time" id="time" name="time" class="form-control" placeholder="Enter the time" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="advice" class="form-label mb-1 fw-medium">Advice Given<span class="text-danger ms-1">*</span></label>
                                            <input type="text" id="advice" name="advice" class="form-control" placeholder="Enter the name" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="fee" class="form-label mb-1 fw-medium">Fee Charged<span class="text-danger ms-1">*</span></label>
                                            <input type="number" id="fee" name="fee" class="form-control" placeholder="Enter the amount" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="appointment_date" class="form-label mb-1 fw-medium">Next Appointment Date<span class="text-danger ms-1">*</span></label>
                                            <input type="appointment_date" id="appointment_date" name="appointment_date" class="form-control" placeholder="Enter the date" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="notes" class="form-label mb-1 fw-medium">Consultation Notes<span class="text-danger ms-1">*</span></label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Enter about word..."></textarea>
                                        </div>
                                    </div>
                                </div>                                
                            </div>
                        </div>
                    </div>
                    <!-- card end -->

                    <div class="d-flex align-items-center justify-content-end">
                        <!-- <a href="#" class="btn btn-light me-2">Cancel</a> -->
                        <button type="submit" name="submit" class="btn btn-primary btn-md fs-13 fw-medium rounded">Update Consultation</button>
                    </div>
                </from>
            </div>
        </div>
        <!-- row end -->               
        
    </div>
    <!-- End Content -->

</div>

<!-- ========================
    End Page Content
========================= -->

<!-- Footer Start -->
<%- include('firmfooter.ejs'); %>
<!-- Footer End -->