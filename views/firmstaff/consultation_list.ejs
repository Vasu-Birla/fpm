<script>
// Delete Client Record
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.delete-client-btn').forEach(function (btn) {
        btn.addEventListener('click', function (e) {
            e.preventDefault();

            const clientId = this.getAttribute('data-id');

            Swal.fire({
                title: 'Are you sure?',
                text: "This client will be permanently deleted.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                reverseButtons: true,
                customClass: {
                    confirmButton: 'swal2-confirm btn btn-danger ms-2',
                    cancelButton: 'swal2-cancel btn btn-secondary'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to delete-clienwith the ID
                    window.location.href = '/firmstaff/delete-client?id=' + clientId;
                }
            });
        });
    });
});
</script>
