
<!-- Header Start -->
<%- include('firmheader.ejs'); %>
<!-- Header End -->

<!-- Sidebar -->
<%- include('firmsidebar.ejs'); %>

<!-- Sidebar End -->

<!-- ========================
    Start Page Content
========================= -->
<div class="page-wrapper">
  <div class="content">

    <!-- Page Header -->
    <div class="d-flex align-items-sm-center flex-sm-row flex-column gap-2 pb-3 mb-3 border-bottom">
      <div class="flex-grow-1">
        <h5 class="fw-bold mb-0">
          <a href="/firmstaff/appointment_list" class="text-dark">
            <i class="ti ti-chevron-left me-1"></i>Add Appointment
          </a>
        </h5>
      </div>
    </div>

    <form action="#" method="POST" class="card">
      <div class="card-body">
        <div class="row g-3">

          <!-- Client Name -->
          <div class="col-md-6">
            <label for="client_name" class="form-label">Client Name</label>
            <select name="client_name" id="client_name" class="form-select select2" required>
              <option value="" disabled selected>Select Client</option>
              <option>John Doe</option>
              <option>Priya Sharma</option>
            </select>
          </div>

          <!-- Lawyer -->
          <div class="col-md-6">
            <label for="lawyer" class="form-label">Lawyer</label>
            <select name="lawyer" id="lawyer" class="form-select select2" required>
              <option value="" disabled selected>Select Lawyer</option>
              <option>Adv. Johnson</option>
              <option>Adv. Smith</option>
            </select>
          </div>

          <!-- Date & Time -->
          <div class="col-md-6">
            <label for="datetime" class="form-label">Date & Time</label>
            <input type="datetime-local" name="datetime" id="datetime" class="form-control" required placeholder="Select appointment date and time">
          </div>

          <!-- Purpose -->
          <div class="col-md-6">
            <label for="purpose" class="form-label">Purpose</label>
            <select name="purpose" id="purpose" class="form-select select2" required>
              <option value="" disabled selected>Select Purpose</option>
              <option>Consultation</option>
              <option>Update</option>
              <option>Signing</option>
            </select>
          </div>

          <!-- Notes -->
          <div class="col-md-12">
            <label for="notes" class="form-label">Notes</label>
            <textarea name="notes" id="notes" class="form-control" rows="3" placeholder="Enter additional notes or comments" required></textarea>
          </div>

          <!-- Reminder Type -->
          <div class="col-md-12">
            <label class="form-label d-block">Reminder Type</label>
            <div class="d-flex gap-3">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="reminder_type" id="remEmail" value="Email" checked required>
                <label class="form-check-label" for="remEmail">Email</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="reminder_type" id="remSMS" value="SMS" required>
                <label class="form-check-label" for="remSMS">SMS</label>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="card-footer d-flex justify-content-end">
        <a href="/firmstaff/appointment_list" class="btn btn-light me-2">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Appointment</button>
      </div>
    </form>

  </div>
</div>
<!-- ========================
    End Page Content
========================= -->


<!-- Footer Start -->
<%- include('firmfooter.ejs'); %>
<!-- Footer End -->