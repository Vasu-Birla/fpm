
<!-- Header Start -->
<%- include('firmheader.ejs'); %>
<!-- Header End -->

<!-- Sidebar -->
<%- include('firmsidebar.ejs'); %>
<!-- Sidebar End -->

<!-- ========================
    Start Page Content
========================= -->
    
<div class="page-wrapper">

  <!-- Start Content -->
  <div class="content">

    <!-- row start -->
    <div class="row justify-content-center">
      <div class="col-lg-12">

        <!-- page header start -->
        <div class="mb-4">
          <h5 class="fw-bold mb-0 d-flex align-items-center"> 
            <a href="/firmstaff/disbursement_list" class="text-dark"> 
              <i class="ti ti-chevron-left me-1"></i>Add Disbursement
            </a>
          </h5>
        </div>
        <!-- page header end -->

        <div class="card">
          <div class="card-body">
            <form action="#" method="POST" enctype="multipart/form-data">
              <div class="row">

                <!-- Case ID -->
                <div class="col-md-6 mb-3">
                  <label for="case_id" class="form-label">Case ID</label>
                  <input 
                    type="text" 
                    id="case_id" 
                    name="case_id" 
                    class="form-control" 
                    placeholder="Enter Case ID" 
                    required
                  >
                </div>

                <!-- Expense Type -->
                <div class="col-md-6 mb-3">
                  <label for="expense_type" class="form-label">Expense Type</label>
                  <select id="expense_type" name="expense_type" class="form-control select2" required>
                    <option value="">Select Expense Type</option>
                    <option value="Filing Fee">Filing Fee</option>
                    <option value="Travel">Travel</option>
                    <option value="Courier">Courier</option>
                  </select>
                </div>

                <!-- Amount -->
                <div class="col-md-6 mb-3">
                  <label for="amount" class="form-label">Amount</label>
                  <input 
                    type="number" 
                    id="amount" 
                    name="amount" 
                    class="form-control" 
                    placeholder="Enter Amount" 
                    required
                  >
                </div>

                <!-- Paid By -->
                <div class="col-md-6 mb-3">
                  <label for="paid_by" class="form-label">Paid By</label>
                  <select 
                    id="paid_by" 
                    name="paid_by" 
                    class="form-control select2" 
                    required
                  >
                    <option value="">Select Payment Type</option>
                    <option value="Cash">Cash</option>
                    <option value="Trust">Trust</option>
                    <option value="Cheque">Cheque</option>
                  </select>
                </div>

                <!-- Upload Voucher -->
                <div class="col-md-6 mb-3">
                  <label for="upload_voucher" class="form-label">Upload Voucher</label>
                  <input 
                    type="file" 
                    id="upload_voucher" 
                    name="upload_voucher" 
                    class="form-control" 
                    required
                  >
                </div>

                <!-- Status -->
                <div class="col-md-6 mb-3">
                  <label for="statuss" class="form-label">Status</label>
                  <select 
                    id="statuss" 
                    name="statuss" 
                    class="form-control select2" 
                    required
                  >
                    <option value="">Select Status</option>
                    <option value="Approved">Approved</option>
                    <option value="Pending">Pending</option>
                  </select>
                </div>

              </div>

              <!-- Action Buttons -->
              <div class="d-flex align-items-center justify-content-end">
                <a href="/firmstaff/disbursement_list" class="btn btn-light me-2">Cancel</a>
                <button 
                  type="submit" 
                  name="submit" 
                  class="btn btn-primary btn-md fs-13 fw-medium rounded"
                >
                  Add Disbursement
                </button>
              </div>

            </form>
          </div>
        </div>

      </div>
    </div>
    <!-- row end -->               
        
  </div>
  <!-- End Content -->

</div>

<!-- ========================
    End Page Content
========================= -->


<!-- Footer Start -->
<%- include('firmfooter.ejs'); %>
<!-- Footer End -->